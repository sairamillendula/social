<!DOCTYPE html>
<html>
<head>
  <title>SocialNetwork</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="navbar navbar-fixed-top">  
  <div class="navbar-inner">  
    <div class="container">
        
      <!--navigation does here-->  
      <ul class="nav">      
        <li class="active">  
          <%= link_to "Social Networks", root_path, :class => "brand" %>
        </li> 
      </ul>
      
      <% if current_user %> 
        <ul class="nav pull-right">
          <li><%= link_to '<i class="icon-home"></i> Home'.html_safe, root_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">  
              <i class="icon-user"></i>&nbsp;&nbsp;<%= current_user.name %>  
              <b class="caret"></b>  
            </a>
            <ul class="dropdown-menu"> 
              <li>
                <%= link_to '<i class="icon-edit"></i> Edit your profile'.html_safe, edit_user_registration_path %>
              </li>
              <li><%= link_to '<i class="icon-off"></i> logout'.html_safe, destroy_user_session_path, :method => :delete %></li>  
            </ul>  
          </li>  
        </ul>
      <% else %>
        <ul class="nav pull-right">
          <li><%= link_to '<i class="icon-home"></i> Home'.html_safe, root_path %></li>
          <li><a href="http://www.grepruby.com/about"><i class="icon-book"></i> About us</a></li> 
          <li><a href="http://www.grepruby.com/contact-us"><i class="icon-envelope"></i> Contact us</a></li>  
        </ul>
      <% end %>
    </div>  
  </div>  
</div> 
<br /><br /><br />


<% if flash[:notice] %>
  <p id="notice" class="alert alert-success"><%= notice %></p>
<% end %>
<% if flash[:error] %>
  <p id="error" class="alert alert-error"><%= flash[:error] %></p>
<% end %>

<%= yield %>

</body>
</html>
